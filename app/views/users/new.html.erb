<%= form_for @users do |u| %>
<div class="container text-center">
  <div class="row mb-4">
    <div class="col-12">
      <h1>TimeTracker</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <h3 id="clock"><%= @time.to_s %></h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4 offset-4">

      <%= u.text_field :name, class: 'form-control', placeholder: "Digite seu nome...", required: true%>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4 offset-4">
      <%= u.submit :Checkin, class: 'btn btn-lg btn-primary btn-block', onclick: 'saveTime()' %>
    </div>
  </div>
</div>

<script type="text/javascript">

  var interval = setInterval(function(){
    real_time_clock()
  }, 1000);

  function saveTime(){
    $(document).load('/users/create');
  }

  function real_time_clock(){

    var d = new Date();
    var time = d.toLocaleTimeString();
    document.getElementById("clock").innerHTML = time;
  }
</script>
<% end %>
