<div class="container text-center">
  <div class="row mb-4">
    <div class="col-12">
      <h1>TimeTracker</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <h3 id="clock"></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-4">
      <%= form_for @users do |u| %>
      <%= u.text_field :name, class: 'form-control', placeholder: "Digite seu nome..."%>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4 offset-4">
      <%= u.submit :Ok, class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">

  var interval = setInterval(function(){
    real_time_clock()
  }, 1000);


  function real_time_clock(){
    var d = new Date();
    var time = d.toLocaleTimeString();
    document.getElementById("clock").innerHTML = time;
  }
</script>
